<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationLogin</servlet-name>
        <servlet-class>servlet.VerificationLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BesoinServlet</servlet-name>
        <servlet-class>servlet.BesoinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertionBesoin</servlet-name>
        <servlet-class>servlet.InsertionBesoin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validation</servlet-name>
        <servlet-class>servlet.Validation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EtatBesoin</servlet-name>
        <servlet-class>servlet.EtatBesoin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationLogin</servlet-name>
        <url-pattern>/verification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BesoinServlet</servlet-name>
        <url-pattern>/besoinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertionBesoin</servlet-name>
        <url-pattern>/insertionBesoin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validation</servlet-name>
        <url-pattern>/validation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EtatBesoin</servlet-name>
        <url-pattern>/etatBesoin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
